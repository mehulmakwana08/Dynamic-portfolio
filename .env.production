# Production Environment Configuration
NODE_ENV=production
LOG_LEVEL=warn

# Database Configuration
MONGODB_URI=your_production_mongodb_uri_here

# Port Configuration (Vercel will override this)
PORT=3000

# Session Configuration
SESSION_SECRET=your_production_session_secret_here

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_production_cloud_name
CLOUDINARY_API_KEY=your_production_api_key
CLOUDINARY_API_SECRET=your_production_api_secret

# Email Configuration
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASS=your_production_app_password
CONTACT_EMAIL=your_production_contact_email@gmail.com

# Site Configuration
SITE_NAME=Your Portfolio Name
SITE_URL=https://your-domain.vercel.app

# Other production configurations
TRUST_PROXY=true
