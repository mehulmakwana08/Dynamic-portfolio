<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Skills</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Manage Skills</h1>
            <a href="/admin/skills/create" class="btn btn-primary">Add New Skill</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Icon</th>
                        <th>Name</th>
                        <th>Percentage</th>
                        <th>Order</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (skills && skills.length > 0) { %>
                        <% skills.forEach(skill => { %>
                            <tr>
                                <td>
                                    <% if (skill.icon) { %>
                                        <img src="/assets/img/icons/<%= skill.icon %>" alt="<%= skill.name %>" style="width: 40px; height: 40px;">
                                    <% } %>
                                </td>
                                <td><%= skill.name %></td>
                                <td><%= skill.percentage %>%</td>
                                <td><%= skill.order %></td>
                                <td>
                                    <span class="badge <%= skill.isActive ? 'bg-success' : 'bg-secondary' %>">
                                        <%= skill.isActive ? 'Active' : 'Inactive' %>
                                    </span>
                                </td>
                                <td>
                                    <a href="/admin/skills/<%= skill._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                                    <button class="btn btn-sm btn-danger delete-skill" data-id="<%= skill._id %>">Delete</button>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center">No skills found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>