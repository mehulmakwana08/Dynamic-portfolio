<%- include('partials/header') %>

<body>
    <!-- Preloader Area Start -->
    <div class="preloader">
        <svg viewBox="0 0 1000 1000" preserveAspectRatio="none">
            <path id="preloaderSvg" d="M0,1005S175,995,500,995s500,5,500,5V0H0Z"></path>
        </svg>

        <div class="preloader-heading">
            <div class="load-text">
                <span>L</span>
                <span>o</span>
                <span>a</span>
                <span>d</span>
                <span>i</span>
                <span>n</span>
                <span>g</span>
            </div>
        </div>
    </div>
    <!-- Preloader Area End -->

    <!-- start: Back To Top -->
    <div class="progress-wrap" id="scrollUp">
        <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
            <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
        </svg>
    </div>
    <!-- end: Back To Top -->

    <%- include('partials/navigation') %>

    <main class="site-content" id="content">
        <!-- HERO SECTION START -->
        <section class="hero-section d-flex align-items-center" id="intro">
            <div class="intro_text">
                <svg viewBox="0 0 1320 300">
                    <text x="50%" Y="50%" text-anchor="middle">
                        HI
                    </text>
                </svg>
            </div>
           <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="hero-content-box">
                            <span class="hero-sub-title"><%= personalInfo.name || 'ANIL MOKASANA' %></span>
                            <h1 class="hero-title"><%= personalInfo.title || 'Graphic designer &' %>
                            </h1>

                            <div class="hero-image-box d-md-none text-center">
                                <img src="<%= personalInfo.profileImage || 'assets/img/hero/mehul.jpeg' %>" alt="<%= personalInfo.name || 'Profile' %>">
                            </div>

                            <p class="lead"><%= personalInfo.bio || "I'm not just a Graphic Designer and 3D animator, I'm a visual sorcerer,I have  4+ years of experience in graphic design conjuring ideas into a vibrant dance of pixels and polygons. With a touch of design magic & a dash of 3D wizardry, I bring concepts to life, turning ordinary visuals into extraordinary experiences." %></p>
                            <div class="button-box d-flex flex-wrap align-items-center">
                                <a href="<%= personalInfo.cvFile || 'Designer Anil .pdf' %>"  class="btn tj-btn-secondary">Download
                                    CV <i class="flaticon-download"></i></a>
                                <ul class="ul-reset social-icons">
                                    <% if (personalInfo.socialLinks && personalInfo.socialLinks.length > 0) { %>
                                        <% personalInfo.socialLinks.forEach(link => { %>
                                            <li><a href="<%= link.url %>" target="_blank" title="<%= link.name %>">
                                                <% if (link.icon) { %>
                                                    <img src="<%= link.icon %>" alt="<%= link.name %>">
                                                <% } else { %>
                                                    <i class="fa fa-link"></i>
                                                <% } %>
                                            </a></li>
                                        <% }) %>
                                    <% } else { %>
                                        <li><a href="#"><img src="assets/img/icons/LOGO.svg"></a></li>
                                        <li><a href="#"><i class="fa fa-bars"></i></a></li>
                                        <li><a href="#"><i class="fa-brands fa-linkedin-in"></i></a></li>
                                        <li><a href="#"><i class="fa-brands fa-github"></i></a></li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 d-none d-md-block">
                        <div class="hero-image-box text-center">
                            <img src="<%= personalInfo.profileImage || 'assets/img/hero/mehul.jpeg' %>" alt="<%= personalInfo.name || 'Profile' %>">
                        </div>
                    </div>
                </div>

                <div class="funfact-area">
                    <div class="row">
                        <div class="col-6 col-lg-4">
                            <div class="funfact-item d-flex flex-column flex-sm-row flex-wrap align-items-center">
                                <div class="number"><span class="odometer" data-count="<%= personalInfo.yearsOfExperience || 4 %>">0</span>+</div>
                                <div class="text">Years of <br>Experience</div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-4">
                            <div class="funfact-item d-flex flex-column flex-sm-row flex-wrap align-items-center">
                                <div class="number"><span class="odometer" data-count="<%= personalInfo.projectsCompleted || 25 %>">0</span>+</div>
                                <div class="text">Project <br>Completed</div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-4">
                            <div class="funfact-item d-flex flex-column flex-sm-row flex-wrap align-items-center">
                                <div class="number"><span class="odometer" data-count="<%= personalInfo.happyClients || 20 %>">0</span></div>
                                <div class="text">Happy <br>Clients</div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </section>
        <!-- SERVICES SECTION START -->
        <section class="services-section" id="services-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-header text-center">
                            <h2 class="section-title wow fadeInUp" data-wow-delay=".3s">My Quality Services</h2>
                            <p class=" wow fadeInUp" data-wow-delay=".4s">We put your ideas and thus your wishes in the
                                form
                                of a unique web project that inspires you
                                and you customers.</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="services-widget position-relative">
                            <% if (services && services.length > 0) { %>
                                <% services.forEach((service, index) => { %>
                                    <div class="service-item <%= index === 0 ? 'current' : '' %> d-flex flex-wrap align-items-center wow fadeInUp" data-wow-delay=".<%= 5 + index %>s">
                                        <div class="left-box d-flex flex-wrap align-items-center">
                                            <span class="number"><%= service.number %></span>
                                            <h3 class="service-title"><%= service.title %></h3>
                                        </div>
                                        <div class="right-box">
                                            <p><%= service.description %></p>
                                        </div>
                                        <% if (service.icon) { %>
                                            <i class="<%= service.icon %>"></i>
                                        <% } else { %>
                                            <i class="flaticon-up-right-arrow"></i>
                                        <% } %>
                                        <button data-mfp-src="#service-wrapper"></button>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <!-- Default services if none exist in database -->
                                <div class="service-item current d-flex flex-wrap align-items-center wow fadeInUp" data-wow-delay=".5s">
                                    <div class="left-box d-flex flex-wrap align-items-center">
                                        <span class="number">01</span>
                                        <h3 class="service-title">Branding Design</h3>
                                    </div>
                                    <div class="right-box">
                                        <p>I break down complex user experience problems to create integrity focused solutions that connect billions of people</p>
                                    </div>
                                    <i class="flaticon-up-right-arrow"></i>
                                    <button data-mfp-src="#service-wrapper"></button>
                                </div>
                                <div class="service-item d-flex flex-wrap align-items-center wow fadeInUp" data-wow-delay=".6s">
                                    <div class="left-box d-flex flex-wrap align-items-center">
                                        <span class="number">02</span>
                                        <h3 class="service-title">Web Design</h3>
                                    </div>
                                    <div class="right-box">
                                        <p>I break down complex user experience problems to create integrity focused solutions that connect billions of people</p>
                                    </div>
                                    <i class="flaticon-up-right-arrow"></i>
                                    <button data-mfp-src="#service-wrapper"></button>
                                </div>
                                <div class="service-item d-flex flex-wrap align-items-center wow fadeInUp" data-wow-delay=".7s">
                                    <div class="left-box d-flex flex-wrap align-items-center">
                                        <span class="number">03</span>
                                        <h3 class="service-title">UI/UX Design</h3>
                                    </div>
                                    <div class="right-box">
                                        <p>I break down complex user experience problems to create integrity focused solutions</p>
                                    </div>
                                    <i class="flaticon-up-right-arrow"></i>
                                    <button data-mfp-src="#service-wrapper"></button>
                                </div>
                                <div class="service-item d-flex flex-wrap align-items-center wow fadeInUp" data-wow-delay=".8s">
                                    <div class="left-box d-flex flex-wrap align-items-center">
                                        <span class="number">04</span>
                                        <h3 class="service-title">Graphics Design</h3>
                                    </div>
                                    <div class="right-box">
                                        <p>I break down complex user experience problems to create integrity focused solutions</p>
                                    </div>
                                    <i class="flaticon-up-right-arrow"></i>
                                    <button data-mfp-src="#service-wrapper"></button>
                                </div>
                            <% } %>
                            <div class="active-bg wow fadeInUp" data-wow-delay=".5s"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- SERVICES SECTION END -->

        <!-- ...existing portfolio, resume, skills, testimonials, blog, contact sections... -->
        
    </main>

    <%- include('partials/footer') %>